# Environment variables for modular chatbot
# Copy this file to .env and fill in your values

# AI API Configuration
# Primary AI provider - Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# Backend Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://frontend:80

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Agent Configuration
MATH_AGENT_TIMEOUT=30
KNOWLEDGE_AGENT_TIMEOUT=45
ROUTER_AGENT_TIMEOUT=10

# InfinitePay Knowledge Base
INFINITEPAY_HELP_URL=https://ajuda.infinitepay.io/pt-BR/